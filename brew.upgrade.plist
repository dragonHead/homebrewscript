<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>brew.upgrade</string>
    <!--フルパスで指定-->
    <key>ProgramArguments</key>
    <array>
      <string>/bin/bash</string>
      <string>brewUpgrade.sh</string>
    </array>
    <key>StartInterval</key>
    <dict>
      <key>Hour</key>
      <integer>22</integer>
      <key>Minute</key>
      <integer>00</integer>
    </dict>
    <key>RunAtLoad</key>
    <true/>
    <key>ExitTimeout</key>
    <integer>300</integer>
  </dict>
</plist>
