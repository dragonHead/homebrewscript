<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>brew.upgrade</string>
    <key>EnvironmentVariables</key>
    <dict>
      <key>PATH</key>
      <string>/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:</string>
    </dict>
    <key>ProgramArguments</key>
    <array>
      <string>/bin/zsh</string>
        <!--フルパスで指定-->
      <string>/Users/***userName***/bin/brewUpgrade.sh</string>
    </array>
    <key>StartCalendarInterval</key>
    <dict>
      <key>Hour</key>
      <integer>22</integer>
      <key>Minute</key>
      <integer>00</integer>
    </dict>
    <key>RunAtLoad</key>
    <true/>
    <key>ExitTimeout</key>
    <integer>300</integer>
    <!-- <key>StandardOutPath</key>
    <string>/tmp/turtle.out</string>
    <key>StandardErrorPath</key>
    <string>/tmp/turtle.err</string> -->
  </dict>
</plist>
